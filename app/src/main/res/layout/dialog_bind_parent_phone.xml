<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_solid_white_corner_5"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="绑定推荐人"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/shape_strike_gray_corner_5"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="wrap_content"
            android:src="@drawable/regis_invite" />

        <EditText
            android:id="@+id/et_invite_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入推荐人手机号"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="@color/gray_light"
            android:textColor="@color/text_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center_vertical"
        android:text="该手机号将成为您的直属上级"
        android:textColor="@color/red"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />
</LinearLayout>