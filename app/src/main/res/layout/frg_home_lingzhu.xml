<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_f7"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_165"
                android:background="@drawable/ic_home_lingzhu_top" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/lingzhu_quanyi"
                android:adjustViewBounds="true"
                />
            <Button
                android:id="@+id/bt_agree"
                android:layout_width="@dimen/dp_185"
                android:layout_height="@dimen/dp_37"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/button_corners_blue_corner_5"
                android:textColor="@color/white"
                android:text="同意"
                android:layout_marginBottom="@dimen/dp_30"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>