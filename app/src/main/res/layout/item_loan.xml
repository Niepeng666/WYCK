<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/shape_strike_blue"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pic"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:layout_centerHorizontal="true"
        android:text="dsds" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/bg_blue_dark" />

    <TextView
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/sp_18"
        android:background="@drawable/button_corners_blue_corner_5"
        android:gravity="center_horizontal"
        android:text="免费办理"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10" />
</LinearLayout>