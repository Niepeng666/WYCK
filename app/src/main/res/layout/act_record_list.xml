<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_header"
        layout="@layout/layout_title" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_header"
        android:background="@color/white"
        app:tabIndicatorColor="?attr/theme_bg_color"
        app:tabMode="fixed"
        app:tabSelectedTextColor="?attr/theme_bg_color">

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="团队VIP" />

        <android.support.design.widget.TabItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="刷卡金额" />



    </android.support.design.widget.TabLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cl_no"
        android:layout_below="@id/tl_tab">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.CardView
        android:id="@+id/cl_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:cardElevation="@dimen/dp_4">

        <android.support.constraint.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/ll_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/ll_phone">


                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_no"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:text="我的排名"
                    android:textSize="@dimen/sp_11" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_no_4"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:visibility="visible"
                app:layout_constraintLeft_toRightOf="@id/ll_no" />

            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="" />


                <LinearLayout
                    android:id="@+id/ll_invite_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_invite_title_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队VIP"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_invite_title_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="位"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>


            <ImageView
                android:id="@+id/iv_level_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/record_level_1"
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@id/ll_phone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/ll_phone" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>